        task_id='{{ task.task_name }}',
        destination_table='{{ task.table }}_{{ task.version }}',
        dataset_id='{{ task.dataset }}',
        project_id='moz-fx-data-shared-prod',
        owner='{{ task.owner }}',
        {%+ if task.email | length > 0 -%}
        email={{ task.email }},
        {%+ endif -%}
