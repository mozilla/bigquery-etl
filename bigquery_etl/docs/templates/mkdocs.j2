site_name: BigQuery ETL
site_description: Mozilla BigQuery ETL
site_author: Mozilla Data Platform Team

repo_url: https://github.com/mozilla/bigquery-etl/
{% for project, datasets in dir_structure.items() -%}
docs_dir: {{ project }}

nav:
  - Home: index.md
  {% for dataset, artifacts in datasets.items() | sort(attribute='0') -%}
  {% if dataset != "" -%}
  {% if artifacts | length == 0 -%}
  - {{ dataset }}: {{ dataset }}/index.md
  {% else %}
  - {{ dataset }}:
    - Overview: {{ dataset }}/index.md
    {% for artifact, _ in artifacts.items() | sort(attribute='0') -%}
    {% if artifact != "" -%}
    - {{ artifact }}: {{ dataset }}/{{ artifact }}/index.md
    {% endif -%}
    {% endfor -%}
  {% endif -%}
  {% endif -%}
  {% endfor -%}
{% endfor %}

theme:
    name: mkdocs
